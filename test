<script>
function parseTimeToMinutes(timeString) {
    const parts = timeString.split(":");
    if (parts.length === 3) {
        return parseInt(parts[0], 10) * 60 + parseInt(parts[1], 10) + parseInt(parts[2], 10) / 60;
    }
    return 0;
}

function getTimingChartData() {
    const table = document.getElementById("recordsTable");
    const rows = table.getElementsByTagName("tr");

    const dates = [];
    const cobStart = [], cobStop = [], rrStop = [];

    for (let i = 1; i < rows.length; i++) {
        const cells = rows[i].getElementsByTagName("td");
        if (cells.length === 8) {
            dates.push(cells[0].innerText);
            cobStart.push(parseTimeToMinutes(cells[1].innerText));
            cobStop.push(parseTimeToMinutes(cells[2].innerText));
            rrStop.push(parseTimeToMinutes(cells[6].innerText));
        }
    }

    return { dates, cobStart, cobStop, rrStop };
}

function renderTimingChart() {
    const ctx = document.getElementById("timingChart").getContext("2d");
    const { dates, cobStart, cobStop, rrStop } = getTimingChartData();

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: dates,
            datasets: [
                {
                    label: 'COB Start Time',
                    data: cobStart,
                    borderColor: 'green',
                    tension: 0.3
                },
                {
                    label: 'COB End Time',
                    data: cobStop,
                    borderColor: 'orange',
                    tension: 0.3
                },
                {
                    label: 'RR Stop Time',
                    data: rrStop,
                    borderColor: 'blue',
                    tension: 0.3
                },
                {
                    label: 'RR Cutoff (01:30)',
                    data: Array(dates.length).fill(90),
                    borderColor: 'red',
                    borderDash: [10, 5],
                    pointRadius: 0,
                    borderWidth: 2,
                    label: 'RR Cutoff',
                },
                {
                    label: 'ILC03 Cutoff (22:30)',
                    data: Array(dates.length).fill(1350),
                    borderColor: 'red',
                    borderDash: [10, 5],
                    pointRadius: 0,
                    borderWidth: 2,
                    label: 'ILC03 Cutoff',
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    min: 0,
                    max: 1500,
                    ticks: {
                        callback: function(value) {
                            const h = Math.floor(value / 60);
                            const m = Math.floor(value % 60);
                            return `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')}`;
                        }
                    },
                    title: {
                        display: true,
                        text: 'Time (HH:mm)'
                    }
                }
            },
            plugins: {
                title: {
                    display: true,
                    text: 'COB & RR Times vs Cutoff Thresholds',
                    font: {
                        size: 18,
                        weight: 'bold'
                    }
                }
            }
        }
    });
}

window.onload = function() {
    renderIDsChart(); // съществуващата графика
    renderTimingChart(); // новата графика
};
</script>
