.chart-container-new {
  margin: auto;
  padding: 10px;
  height: auto;       /* височината остава динамична или по избор */
}

/* широчината се сменя чрез допълнителни класове */
.chart-container-new.w-0-10 {
  width: 500px;
}
.chart-container-new.w-11-20 {
  width: 700px;
}
.chart-container-new.w-21-plus {
  width: 900px;
}



<script>
document.addEventListener('DOMContentLoaded', () => {
  // Функция, която превключва класа на контейнера спрямо броя дни
  function updateContainerWidth(days) {
    const ctr = document.getElementById('chartContainer');
    ctr.classList.remove('w-0-10', 'w-11-20', 'w-21-plus');
    if (days <= 10) {
      ctr.classList.add('w-0-10');
    } else if (days <= 20) {
      ctr.classList.add('w-11-20');
    } else {
      ctr.classList.add('w-21-plus');
    }
  }

  const slider = document.getElementById('daysRange');
  const label  = document.getElementById('daysValue');

  // При промяна на слайдъра само ъпдейтваме широчината и лейбъла
  function onDaysChange() {
    const days = parseInt(slider.value, 10);
    label.textContent = days;
    updateContainerWidth(days);
    // renderElapsedChart() ще бъде извикана по-надолу в твоя код
  }

  slider.addEventListener('input', onDaysChange);

  // Първоначално задаваме състоянието
  onDaysChange();
});
</script>
