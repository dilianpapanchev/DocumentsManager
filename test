    <script>
        // –î–∞–Ω–Ω–∏ –∑–∞ –∑–∞–ø–∏—Å–∏ –Ω–∞ –º–∏–Ω—É—Ç–∞
        const labels = ["20250317", "20250318", "20250319"];
        const recordsPerMinute = [49438, 64511, 136589];

        // –î–æ—Å—Ç—ä–ø –¥–æ canvas
        const ctx = document.getElementById('recordsChart').getContext('2d');

        // –ì—Ä–∞–¥–∏–µ–Ω—Ç –∑–∞ –∫–æ–ª–æ–Ω–∏—Ç–µ
        const gradient1 = ctx.createLinearGradient(0, 0, 0, 400);
        gradient1.addColorStop(0, 'rgba(255, 99, 132, 1)');
        gradient1.addColorStop(1, 'rgba(255, 99, 132, 0.3)');

        const gradient2 = ctx.createLinearGradient(0, 0, 0, 400);
        gradient2.addColorStop(0, 'rgba(54, 162, 235, 1)');
        gradient2.addColorStop(1, 'rgba(54, 162, 235, 0.3)');

        const gradient3 = ctx.createLinearGradient(0, 0, 0, 400);
        gradient3.addColorStop(0, 'rgba(75, 192, 192, 1)');
        gradient3.addColorStop(1, 'rgba(75, 192, 192, 0.3)');

        // –†–µ–Ω–¥–∏—Ä–∞–Ω–µ –Ω–∞ –≥—Ä–∞—Ñ–∏–∫–∞—Ç–∞
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Records Per Minute',
                    data: recordsPerMinute,
                    backgroundColor: [gradient1, gradient2, gradient3],
                    borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(75, 192, 192, 1)'],
                    borderWidth: 2,
                    borderRadius: 10,  // –ó–∞–∫—Ä—ä–≥–ª–µ–Ω–∏ —Ä—ä–±–æ–≤–µ
                    hoverBorderWidth: 3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            font: {
                                size: 14
                            },
                            color: "#333"
                        }
                    },
                    x: {
                        ticks: {
                            font: {
                                size: 14
                            },
                            color: "#333"
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        labels: {
                            font: {
                                size: 16,
                                weight: 'bold'
                            },
                            color: "#444"
                        }
                    },
