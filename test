    <script>
        // Данни за CPU Usage
        const labels = ["20:30", "20:40", "20:50", "21:00", "21:10", "21:20", "21:30", "21:40", "21:50", "22:00"];
        const userUsage = [8.03, 34.07, 73.51, 46.88, 75.34, 15.39, 9.60, 21.78, 15.96, 34.39];
        const systemUsage = [1.62, 3.54, 4.46, 4.78, 4.40, 3.44, 2.82, 3.57, 2.76, 5.27];
        const idleUsage = [90.19, 62.24, 21.92, 48.17, 19.63, 81.02, 87.40, 74.37, 79.42, 59.57];

        // Рендиране на графиката
        const ctx = document.getElementById('cpuChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'USER%',
                        data: userUsage,
                        borderColor: 'rgba(255, 99, 132, 1)',
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderWidth: 3,
                        pointRadius: 5,
                        fill: true
                    },
                    {
                        label: 'SYSTEM%',
                        data: systemUsage,
                        borderColor: 'rgba(54, 162, 235, 1)',
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderWidth: 3,
                        pointRadius: 5,
                        fill: true
                    },
                    {
                        label: 'IDLE%',
                        data: idleUsage,
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderWidth: 3,
                        pointRadius: 5,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            font: {
                                size: 16
                            }
                        }
                    }
                }
            }
        });
    </script>

